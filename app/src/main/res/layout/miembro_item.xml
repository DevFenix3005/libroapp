<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.time.format.DateTimeFormatter" />

        <variable
            name="miembro"
            type="com.lania.ejercicio2.componentes.miembro.MiembroItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/miembro_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="@{miembro.data.nombre}"
            android:textColor="?attr/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/miembro_borrar_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/miembro_direccion_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Direccion"
            android:textColor="?attr/colorOnBackground"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/miembro_birthday_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/miembro_nombre" />

        <TextView
            android:id="@+id/miembro_birthday_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="CumpleaÃ±os"
            android:textColor="?attr/colorOnBackground"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/miembro_elapsed_label"
            app:layout_constraintStart_toEndOf="@+id/miembro_direccion_label"
            app:layout_constraintTop_toBottomOf="@+id/miembro_nombre" />

        <TextView
            android:id="@+id/miembro_elapsed_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Antiguedad de registro"
            android:textColor="?attr/colorOnBackground"
            android:textSize="13sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toStartOf="@+id/miembro_borrar_button"
            app:layout_constraintStart_toEndOf="@+id/miembro_birthday_label"
            app:layout_constraintTop_toBottomOf="@+id/miembro_nombre" />


        <TextView
            android:id="@+id/miembro_direccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="@{miembro.data.direccion}"
            android:textColor="?attr/colorOnBackground"
            app:layout_constraintEnd_toStartOf="@+id/miembro_birthday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/miembro_direccion_label" />

        <TextView
            android:id="@+id/miembro_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="@{miembro.data.fechaDeNacimiento.format(DateTimeFormatter.ofPattern(`dd 'de' MMMM 'del' yyyy`))}"
            android:textColor="?attr/colorOnBackground"
            app:layout_constraintEnd_toStartOf="@+id/miembro_elapsed"
            app:layout_constraintStart_toEndOf="@+id/miembro_direccion"
            app:layout_constraintTop_toBottomOf="@+id/miembro_birthday_label" />

        <TextView
            android:id="@+id/miembro_elapsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{miembro.getElapsedTime}"
            android:textColor="?attr/colorOnBackground"
            app:layout_constraintEnd_toEndOf="@+id/miembro_elapsed_label"
            app:layout_constraintStart_toEndOf="@+id/miembro_birthday"
            app:layout_constraintTop_toBottomOf="@+id/miembro_elapsed_label" />


        <ImageButton
            android:id="@+id/miembro_borrar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/colorOnPrimary"
            android:contentDescription="to delete a item form list"
            android:src="@mipmap/ic_delete_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/miembro_nombre"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
